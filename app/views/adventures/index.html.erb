<h1>Welome to Sam's Adventure page!!</h1>
  
  <% @adventures.each do |adventure| %>
    <% current = adventure.pages.find_by(name: "start") %>
    <ul>
      <li><%= link_to adventure.title, adventure_page_path(adventure, current) %> by <%=adventure.author %></li>
 
      <li><%= link_to 'Delete', adventures_path , method: :delete, data: {confirm: 'Are you sure?'} %></li>
    </ul>
  <% end %>